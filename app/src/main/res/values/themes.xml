<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AllMyReview" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purpleBlue</item>
        <item name="colorPrimaryVariant">#4356B5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/purpleBlue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AllMyReview.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AllMyReview.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AllMyReview.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="defaultButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorAccent">@color/purpleBlue</item>
    </style>
    <style name="urgentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorPrimaryDark">@color/DarkpurpleBlue</item>
    </style>
</resources>